<?xml version="1.0" encoding="UTF-8"?>

<project>
	<extend>../project.xml</extend>

	<artifactId>ep-rt-app-plugins</artifactId>
	<name>E-podręczniki: dodawanie WOMI</name>
	<description>Rozszerzenie dla Aplikacji Redaktora, które dostosowuje
		interfejs do potrzeb Repozytorium Treści E-podręczników</description>

	<dependencies>
		<dependency>
			<groupId>org.swinglabs.swingx</groupId>
			<artifactId>swingx-all</artifactId>
			<version>1.6.4</version>
		</dependency>
		<dependency>
			<groupId>com.thaiopensource</groupId>
			<artifactId>jing</artifactId>
			<version>20091111</version>
			<properties>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<groupId>com.kitfox.svg</groupId>
			<artifactId>svg-salamander</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<artifactId>ep-rt-common</artifactId>
			<groupId>${pom.groupId}</groupId>
			<version>${pom.currentVersion}</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-base</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-services</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-app-extension-api</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-app-base</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-utils</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<id>log4j</id>
			<version>1.2.14</version>
			<url>http://logging.apache.org/log4j/</url>
			<properties>
				<dist.skip>true</dist.skip>
				<comment>License: Apache License, Version 2.0</comment>
			</properties>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>${basedir}/src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/etc</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>${builddir}/../${maven.final.name}</targetPath>
			</resource>
			<resource>
				<directory>${basedir}/src/res</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>${basedir}/src/java</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	
</project>
