<?xml version="1.0" encoding="UTF-8"?>

<project>
	<extend>../project.xml</extend>

	<artifactId>ep-rt-server</artifactId>
	<name>E-podręczniki: serwis dLibry</name>
	<description>Konfiguracja serwera wraz z serwisem, który odpowiada za
		komunikację z Repozytorium Treści z pozostałymi komponentami e-podręczników
	</description>

	<dependencies>
		<dependency>
			<artifactId>ep-rt-common</artifactId>
			<groupId>${pom.groupId}</groupId>
			<version>${pom.currentVersion}</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-base</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-services</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>
		<dependency>
			<artifactId>dlibra-common-utils</artifactId>
			<groupId>${dlibra.groupId}</groupId>
			<version>${dlibra.version}</version>
			<url>http://dlibra.psnc.pl/</url>
			<properties>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>

		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20131018</version>
		</dependency>
		<dependency>
			<groupId>com.mchange</groupId>
			<artifactId>mchange-commons-java</artifactId>
			<version>0.2.10</version>
		</dependency>
		<dependency>
			<groupId>com.rabbitmq</groupId>
			<artifactId>amqp-client</artifactId>
			<version>3.3.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.2.1</version>
			<url>http://hc.apache.org</url>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
			<version>4.2.1</version>
			<url>http://hc.apache.org</url>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate</artifactId>
			<version>3.1.3</version>
			<url>http://www.hibernate.org/6.html</url>
		</dependency>
		<dependency>
			<id>log4j</id>
			<version>1.2.17</version>
			<url>http://logging.apache.org/log4j/</url>
			<properties>
				<dist.skip>true</dist.skip>
				<comment>License: Apache License, Version 2.0</comment>
			</properties>
		</dependency>
		<dependency>
			<groupId>net.sf.jpf</groupId>
			<artifactId>jpf</artifactId>
			<version>1.5</version>
			<url>http://jpf.sourceforce.net</url>
			<properties>
				<dist.skip>true</dist.skip>
				<comment>License: LGPL</comment>
			</properties>
		</dependency>
		<dependency>
			<groupId>opensymphony</groupId>
			<artifactId>quartz</artifactId>
			<version>1.5.2</version>
			<url>http://www.opensymphony.com/quartz/</url>
			<properties>
				<dist.skip>true</dist.skip>
			</properties>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>${basedir}/src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/etc</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>${builddir}/../${maven.final.name}</targetPath>
			</resource>
			<resource>
				<directory>${basedir}/src/res</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>${basedir}/src/java</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
	</build>
</project>
